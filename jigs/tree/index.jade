          ui-tree-item
            a(href="#a3") Item B.3
            
            ui-tree
              ui-tree-item: a(href="#a31") Item B.3.1
              ui-tree-item: a(href="#a32") Item B.3.2
              ui-tree-item
                a(href="#a33") Item B.3.3
                
                ui-tree
                  ui-tree-item: a(href="#a31") Item B.3.3.1
                  ui-tree-item: a(href="#a32") Item B.3.3.2
                  ui-tree-item: a(href="#a33") Item B.3.3.3
      
      ui-tree-item: a(href="#c") Item C
      
      ui-tree-item(collapsible="false")
        a(href="#a") Non-collapsible Item D
        
        ui-tree
          ui-tree-item: a(href="#a1") Item D.1
          ui-tree-item: a(href="#a2") Item D.2
          ui-tree-item(collapsible="false")
            a(href="#a3") Item D.3
            
            ui-tree
              ui-tree-item: a(href="#a31") Item D.3.1
              ui-tree-item: a(href="#a32") Item D.3.2
              ui-tree-item: a(href="#a33") Item D.3.3
