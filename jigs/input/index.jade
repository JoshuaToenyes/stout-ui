extends ../_blueprint/master.jade

block content

  h1.ex-title Input
  
  .ex-heading Basic Text Input
  p Here's a basic input.
  
  .ex.basic
    .ex-label basic
    ui-input(required) First Name
    ui-input( 
      maxlength="15", 
      hint="Let us get to know you!", 
      validators="required") Last Name
    ui-input(
      mask="#### #### #### ####", 
      required,
      hint="Visa, MasterCard or American Express") Credit Card Number
    ui-input(
      mask="+1 (###) ###-####", 
      value="4065551212", 
      required,
      hint="+1 (###) ###-####") US Phone Number
    ui-input(
      mask="(##?#?) ####-####",
      required) UK Phone Number
  
