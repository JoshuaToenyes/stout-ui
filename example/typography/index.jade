      h4 #{shortHeading}
    
    .ex
      .ex-label display-2
      h5 #{shortHeading}
    
    .ex
      .ex-label display-1
      h6 #{shortHeading}
    
    .sep
    
    .ex
      .ex-label display-6
      h1 #{longHeading}
    
    .ex
      .ex-label display-5
      h2 #{longHeading}
  
    .ex
      .ex-label display-4
      h3 #{longHeading}
    
    .ex
      .ex-label display-3
      h4 #{longHeading}
    
    .ex
      .ex-label display-2
      h5 #{longHeading}
    
    .ex
      .ex-label display-1
      h6 #{longHeading}
    
    .sep
    
    .ex
      .ex-label display-6<br/>body-1
      h1 #{shortHeading}
      p #{paragraph}
  
