      .ex-label display-5<br/>body-1
      h2 #{shortHeading}
      p #{paragraph}
  
    .ex
      .ex-label display-4<br/>body-1
      h3 #{shortHeading}
      p #{paragraph}
    
    .ex
      .ex-label display-3<br/>body-1
      h4 #{shortHeading}
      p #{paragraph}
    
